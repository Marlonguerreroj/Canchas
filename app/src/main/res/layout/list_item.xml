<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:weightSum="2">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgListItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="0dp"
        android:src="@drawable/picture" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <RatingBar
            android:id="@+id/lblCalificacion"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:numStars="5"
            android:rating="2.5" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lblUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/lblCalificacion" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/verMas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCalificacion"
            android:layout_marginTop="10dp"
            android:text="@string/ver_mas" />

    </RelativeLayout>


</LinearLayout>